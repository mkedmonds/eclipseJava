import java.util.Scanner;

public class InchesToFeetEdmonds {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//Coverte inches to feet and inches from user input
		
		final int INCHES_TO_FOOT = 12;
		
		Scanner in = new Scanner(System.in);
		
		System.out.println("Please enter an inch value: ");
		
		int inchValue = in.nextInt();
		
		
		System.out.println("Inch value: " + inchValue);
		
		
		
		int footValue = inchValue / INCHES_TO_FOOT;
		
		int remainderValue = inchValue - (footValue * INCHES_TO_FOOT);
		
		System.out.println("You want: " + footValue + " feet and " + remainderValue + " inches");
		
		
		
	}

}
