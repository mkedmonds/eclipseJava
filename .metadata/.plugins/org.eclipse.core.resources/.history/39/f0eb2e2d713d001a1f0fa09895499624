public class DataTypeDemoEdmonds {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int hoursSlept = 6;
		double gpa = 3.5;
		float pagesRead = 12.5f;
		boolean successful = true;
		short amountOfMoney = 31000;
		long salary = 15000000L;
		byte daysPerWeek = 5;
		char grade = 'A';
		
		System.out.println("After sleeping " + hoursSlept + " hours last night becaise i read " + pagesRead + " pages in the textbook, I was happy to recieve an " + grade + "! Now that my gpa is " + gpa + ", I am able to get my dream job at Computer Inc where i will get paid $" + amountOfMoney + " and will work " + daysPerWeek +" days a week. My salary will be close to $" + salary + " a year! I can't believe this is " + successful + "!!!");

	}

}
